---
import {Image} from 'astro:assets';

const { img, alt, title, description } = Astro.props;
---

<article class="group relative block w-full h-0 pb-[100%] overflow-hidden rounded-xl">
  <Image
    src={img}
    alt={alt}
    width="530"
    height="530"
    class="absolute brightness-75 inset-0 object-cover transition-all duration-500 ease-out size-full rounded-xl lg:group-hover:brightness-75 lg:brightness-100"
  />
  <div
    class="absolute inset-0 flex flex-col p-4 transition-opacity duration-500 ease-out transform lg:bg-opacity-90 lg:opacity-0 group-hover:opacity-100 lg:hover:bg-background-900 lg:hover:backdrop-blur-sm lg:hover:bg-opacity-10 rounded-xl"
  >
    <h3 class="px-4 py-2 bg-white border text-body-sm rounded-xl w-max">{title}</h3>
    <p class="mt-auto font-medium text-text-950 text-sm sm:text-body rounded-xl max-w-max">
      {description}
    </p>
  </div>
</article>
